<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.navigation.NavigationView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="match_parent"
    android:background="@drawable/radius_navigation_drawer_background">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginStart="5dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout3">

        <TextView
            android:id="@+id/textview_nav_drawer_productList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="제품등록 리스트"
            android:background="?attr/selectableItemBackground"
            android:textColor="@color/black"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:textSize="19dp"/>

        <TextView
            android:id="@+id/textview_nav_drawer_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="공지사항"
            android:background="?attr/selectableItemBackground"
            android:textColor="@color/black"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:textSize="19dp"/>

        <TextView
            android:id="@+id/textview_nav_drawer_scanHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SCAN 히스토리"
            android:background="?attr/selectableItemBackground"
            android:textColor="@color/black"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:textSize="19dp"/>

        <TextView
            android:id="@+id/textview_nav_drawer_certifiedCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="인증업체"
            android:background="?attr/selectableItemBackground"
            android:textColor="@color/black"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:textSize="19dp"/>

        <TextView
            android:id="@+id/textview_nav_drawer_reportCopy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="복제품신고"
            android:background="?attr/selectableItemBackground"
            android:textColor="@color/black"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:textSize="19dp"/>

        <View
            style="@style/Divider"
            android:backgroundTint="@color/lower_gray"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/textview_nav_drawer_manual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="사용법 안내"
            android:background="?attr/selectableItemBackground"
            android:textColor="#50323334"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textSize="17dp"/>

        <TextView
            android:id="@+id/textview_nav_drawer_faq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FAQ"
            android:background="?attr/selectableItemBackground"
            android:textColor="#50323334"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textSize="17dp"/>

        <TextView
            android:id="@+id/textview_nav_drawer_purchase_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="구매문의"
            android:background="?attr/selectableItemBackground"
            android:textColor="#50323334"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textSize="17dp"/>

        <TextView
            android:id="@+id/textview_nav_drawer_appInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="어플정보"
            android:background="?attr/selectableItemBackground"
            android:textColor="#50323334"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textSize="17dp"/>


    </LinearLayout>



<!--
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        app:elevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_nav_drawer_productList"
        app:menu="@menu/navigation_drawer_item" />
-->
    <ImageView
        android:id="@+id/imageView_profile"
        android:scaleType="centerCrop"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_profile"
        app:layout_constraintStart_toEndOf="@+id/imageView_profile"
        app:layout_constraintTop_toTopOf="@+id/imageView_profile">

        <TextView
            android:id="@+id/textView_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_userPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:textColor="#21CCB2"
            android:textSize="13dp" />

    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_profile">

        <ImageButton
            android:id="@+id/company_product_register"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/radious_button_swebscolor"
            android:backgroundTint="#93E3BE"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/ic_baseline_file_upload_24"
            android:backgroundTint="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/company_product_register"
            app:layout_constraintEnd_toEndOf="@+id/company_product_register"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/company_product_register"
            app:layout_constraintTop_toTopOf="@+id/company_product_register" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기업사 제품등록"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/company_product_register"
            app:layout_constraintEnd_toStartOf="@+id/imageView4"
            app:layout_constraintStart_toStartOf="@+id/company_product_register"
            app:layout_constraintTop_toTopOf="@+id/company_product_register" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.navigation.NavigationView>
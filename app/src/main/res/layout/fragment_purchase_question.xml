<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="25dp"
                android:paddingTop="20dp"
                android:text="* 회사명"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/editText_purchaseQ_company"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/radius_login_edittext"
                android:backgroundTint="#E8EAEA"
                android:hint="회사명을 입력해주세요"
                android:paddingStart="20dp"
                android:textSize="13dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout6">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="25dp"
                android:paddingTop="20dp"
                android:text="* 담당자"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/editText_purchaseQ_managerName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/radius_login_edittext"
                android:backgroundTint="#E8EAEA"
                android:paddingStart="20dp"
                android:textSize="13dp" />

        </LinearLayout>

        <View
            android:id="@+id/dividerView1"
            style="@style/Divider"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />


        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dividerView1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="25dp"
                android:paddingTop="20dp"
                android:text="휴대폰 번호"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/editText_purchaseQ_phone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:hint="010-1234-5678"
                android:inputType="phone"
                android:background="@drawable/radius_login_edittext"
                android:backgroundTint="#E8EAEA"
                android:paddingStart="20dp"
                android:textSize="13dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="25dp"
                android:paddingTop="20dp"
                android:text=" 이메일"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/editText_purchaseQ_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/radius_login_edittext"
                android:backgroundTint="#E8EAEA"
                android:inputType="textEmailAddress"
                android:hint="이메일을 입력해주세요"
                android:paddingStart="20dp"
                android:textSize="13dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="25dp"
                android:paddingTop="20dp"
                android:text=" 주소"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TextView_address"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="ex) 165013"
                    android:background="@drawable/radius_login_edittext"
                    android:backgroundTint="#E8EAEA"
                    android:paddingTop="15dp"
                    android:paddingStart="20dp"
                    android:textSize="13dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="주소검색"
                    android:layout_marginStart="30dp"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:background="@drawable/radious_button_graycolor"/>


            </LinearLayout>

            <TextView
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:paddingTop="15dp"
                android:paddingStart="20dp"
                android:background="@drawable/radious_button_graycolor"
                android:backgroundTint="#E8EAEA"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout8">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="25dp"
                android:paddingTop="20dp"
                android:text="* 관심제품"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/editText_purchaseQ_production"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/radius_login_edittext"
                android:backgroundTint="#E8EAEA"
                android:hint=" 관심제품 "
                android:paddingStart="20dp"
                android:textSize="13dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout9">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="25dp"
                android:paddingTop="20dp"
                android:text="* 수량"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/editText_purchaseQ_quantity"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/radius_login_edittext"
                android:backgroundTint="#E8EAEA"
                android:hint=" 수량을 입력하세요 "
                android:inputType="number"
                android:paddingStart="20dp"
                android:textSize="13dp" />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/linearLayout11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout10">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="25dp"
                android:paddingTop="20dp"
                android:text="* 사이즈"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/editText_purchaseQ_size"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/radius_login_edittext"
                android:backgroundTint="#E8EAEA"
                android:hint=" 사이즈를 입력하세요 "
                android:inputType="number"
                android:paddingStart="20dp"
                android:textSize="13dp" />

        </LinearLayout>

        <View
            android:id="@+id/divider_view4"
            style="@style/Divider"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout11" />

        <LinearLayout
            android:id="@+id/linearLayout13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider_view4">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="25dp"
                android:paddingTop="20dp"
                android:text="* 세부내용"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/editText_purchaseQ_detail_Info"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/radius_login_edittext"
                android:backgroundTint="#E8EAEA"
                android:hint="내용을 입력하세요"
                android:inputType="number"
                android:paddingStart="20dp"
                android:textSize="13dp" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_file_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/radius_login_edittext"
            android:backgroundTint="#E8EAEA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout13" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="파일첨부"
            android:textColor="@color/swebs_main_color2"
            android:textSize="13dp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_file_input"
            app:layout_constraintStart_toStartOf="@+id/btn_file_input"
            app:layout_constraintTop_toTopOf="@+id/btn_file_input" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/ic_paper_clip"
            app:layout_constraintBottom_toBottomOf="@+id/btn_file_input"
            app:layout_constraintEnd_toEndOf="@+id/btn_file_input"
            app:layout_constraintTop_toTopOf="@+id/btn_file_input" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/bottom_round_corner_background"
            android:elevation="7dp"
            android:padding="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_file_input"
            app:layout_constraintStart_toStartOf="parent">

            <ImageButton
                android:id="@+id/btn_makeAccount_ok"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/radious_button_swebscolor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="확  인"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/btn_makeAccount_ok"
                app:layout_constraintEnd_toEndOf="@+id/btn_makeAccount_ok"
                app:layout_constraintStart_toStartOf="@+id/btn_makeAccount_ok"
                app:layout_constraintTop_toTopOf="@+id/btn_makeAccount_ok" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

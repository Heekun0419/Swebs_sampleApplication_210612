<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="15dp">

    <TextView
        android:id="@+id/textView_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/radius_login_edittext"
        android:backgroundTint="#F9FAFC"
        android:padding="5dp"
        android:paddingStart="10dp"
        android:paddingEnd="25dp"
        android:text="# 금융케어 "
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_tag_close"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginEnd="3dp"
        android:background="@drawable/ic_baseline_close_24"
        android:backgroundTint="@color/lower_gray"
        app:layout_constraintBottom_toBottomOf="@+id/textView_tag"
        app:layout_constraintEnd_toEndOf="@+id/textView_tag"
        app:layout_constraintTop_toTopOf="@+id/textView_tag" />

</androidx.constraintlayout.widget.ConstraintLayout>
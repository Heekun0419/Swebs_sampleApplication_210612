<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="@android:integer/config_shortAnimTime"
    android:exitFadeDuration="@android:integer/config_shortAnimTime">

    <item android:state_checked="false">
        <shape>
            <stroke android:color="#f3f4f8" android:width="1dp"/>
            <corners android:radius="30dp"/>
            <solid android:color="@color/white"/>
        </shape>
    </item>

    <item android:state_checked="true" >
        <layer-list>
            <!-- 배경-->
            <item>
                <shape>
                    <stroke android:color="#4abf84" android:width="1dp"/>
                    <corners android:radius="30dp"/>
                    <solid android:color="#8ae0b8"/>
                </shape>
            </item>
            <item android:drawable="@drawable/ic_checkbox_selected" android:top="2dp"
                android:right="2dp" android:bottom="2dp" android:left="2dp"/>
        </layer-list>
    </item>
</animated-selector>